# gaps
for_window [class="^.*"] border pixel 2
gaps inner 0
gaps outer 0

for_window [class=Eog|nsxiv|feh|Vlc|pavucontrol|Xarchiver] floating enable
for_window [class=Eog|nsxiv|feh|Vlc|File-roller|Xarchiver] focus
set $mod Mod4
